// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User - Blog readers and admin
model User {
  id          String    @id @default(cuid())
  email       String    @unique
  firebaseUid String    @unique
  role        Role      @default(USER)
  name        String?
  photoUrl    String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  comments    Comment[]
  likes       Like[]
}

enum Role {
  ADMIN
  USER
}

// Profile - Admin's portfolio information (singleton)
model Profile {
  id          String  @id @default(cuid())
  name        String
  designation String
  bio         String  @db.Text
  resumeUrl   String?
  socialLinks Json    // { github, linkedin, twitter, facebook, etc. }
  phone       String?
  email       String
  photoUrl    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Skill - Technical skills with proficiency
model Skill {
  id          String   @id @default(cuid())
  name        String
  category    String   // Frontend, Backend, Tools, Database, DevOps
  proficiency Int      // 0-100
  icon        String?
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Experience - Work history timeline
model Experience {
  id          String    @id @default(cuid())
  company     String
  role        String
  startDate   DateTime
  endDate     DateTime?
  description String    @db.Text
  current     Boolean   @default(false)
  order       Int       @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

// Project - Portfolio projects
model Project {
  id           String   @id @default(cuid())
  title        String
  slug         String   @unique
  image        String?
  technologies String[] // Array of tech names
  description  String   @db.Text
  liveLink     String?
  repoLink     String?
  challenges   String?  @db.Text
  improvements String?  @db.Text
  featured     Boolean  @default(false)
  order        Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

// BlogPost - Blog articles
model BlogPost {
  id          String    @id @default(cuid())
  title       String
  slug        String    @unique
  excerpt     String?   @db.Text
  content     String    @db.Text // Rich text/markdown
  coverImage  String?
  published   Boolean   @default(false)
  authorId    String
  readTime    Int?      // Estimated read time in minutes
  tags        String[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  comments    Comment[]
  likes       Like[]
}

// Comment - Blog comments
model Comment {
  id        String   @id @default(cuid())
  content   String   @db.Text
  userId    String
  postId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  post      BlogPost @relation(fields: [postId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Like - Blog post likes (unique per user per post)
model Like {
  id        String   @id @default(cuid())
  userId    String
  postId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  post      BlogPost @relation(fields: [postId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, postId])
}

// Contact - Contact form submissions
model Contact {
  id        String   @id @default(cuid())
  name      String
  email     String
  subject   String?
  message   String   @db.Text
  read      Boolean  @default(false)
  createdAt DateTime @default(now())
}
